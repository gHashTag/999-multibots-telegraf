{
  "name": "neuro-blogger-telegram-bot",
  "version": "0.0.1",
  "description": "Telegram bot for generating blog posts using AI",
  "main": "src/bot.ts",
  "scripts": {
    "start": "bun run dist/bot.js",
    "dev": "bun --watch src/bot.ts",
    "build": "bun run build:ts && bun run build:alias",
    "build:ts": "tsc",
    "build:alias": "tsc-alias",
    "build:prod": "tsc -p tsconfig.prod.json && bun run build:alias",
    "build:nocheck": "tsc --skipLibCheck --skipDefaultLibCheck && bun run build:alias",
    "predev": "pkill -f 'bun.*src/bot.ts' || true && node scripts/kill-port.cjs 2999 3001 8288",
    "test": "bun test",
    "test:vitest": "cross-env SUPABASE_URL=TEST_URL SUPABASE_SERVICE_KEY=TEST_KEY pnpm vitest run",
    "lint": "bunx eslint . --ext .ts",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "typecheck": "bun run build:ts --noEmit",
    "check:translations": "bun run scripts/check_ai_stars_translations.ts",
    "generate:translations-sql": "bun run scripts/check_ai_stars_translations.ts --generate-sql"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@fastify/express": "^4.0.2",
    "@supabase/supabase-js": "^2.39.3",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.0",
    "axios": "1.8.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "elevenlabs": "^0.16.1",
    "envalid": "^7.3.1",
    "express": "^5.1.0",
    "express-fileupload": "^1.4.3",
    "express-serve-static-core": "^0.1.1",
    "fastify": "^5.3.2",
    "form-data": "^4.0.0",
    "inngest": "^2.7.2",
    "jest-mock": "^29.7.0",
    "md5": "^2.3.0",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.24.7",
    "pinata-web3": "^0.5.4",
    "qs": "^6.11.2",
    "replicate": "^0.25.2",
    "telegraf": "^4.16.3",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "yt-dlp-wrap": "^2.3.12",
    "zod": "^3.25.30"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^29.5.14",
    "@types/md5": "^2.3.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@types/node-fetch": "^2.6.12",
    "@types/qs": "^6.9.18",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
