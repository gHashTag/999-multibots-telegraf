{
  "name": "neuro-blogger-telegram-bot",
  "version": "0.0.1",
  "description": "Neuro Blogger Telegram Bot",
  "author": "",
  "license": "ISC",
  "scripts": {
    "predev": "pkill -f 'node.*src/bot.ts' || true && node scripts/kill-port.cjs 2999 3001 8288",
    "start": "npm run build && cross-env NODE_ENV=production node dist/bot.js",
    "dev": "nodemon src/bot.ts",
    "build": "tsc",
    "build:tsc": "tsc && tsc-alias",
    "build:prod": "tsc -p tsconfig.prod.json && tsc-alias",
    "build:nocheck": "tsc --skipLibCheck --skipDefaultLibCheck && tsc-alias",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:payment": "jest --config jest.config.js __tests__/payments",
    "test:integration": "jest --config jest.config.js __tests__/integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "prepare": "husky install",
    "start:multi": "node dist/multi.js",
    "deploy": "pnpm run build:nocheck && bash ./scripts/update-host.sh",
    "deploy:local": "pnpm run build:nocheck && REMOTE_MODE=false bash ./scripts/update-host.sh",
    "deploy:test": "bash scripts/deploy-test.sh",
    "deploy:server": "./scripts/deploy.sh",
    "docker:prod": "docker-compose -f docker-compose.webhook.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.multi.yml up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.47.10",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "elevenlabs": "^0.16.1",
    "envalid": "^7.3.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "form-data": "^4.0.1",
    "jest-mock": "^29.7.0",
    "md5": "^2.3.0",
    "openai": "^4.77.0",
    "pinata-web3": "^0.5.4",
    "replicate": "^0.32.0",
    "telegraf": "^4.16.3",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@automock/jest": "^2.1.0",
    "@golevelup/ts-jest": "^0.6.2",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.220",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "jest-date-mock": "^1.0.10",
    "jest-extended": "^4.0.2",
    "jest-fail-on-console": "^3.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-html-reporters": "^3.1.7",
    "jest-localstorage-mock": "^2.4.26",
    "jest-mock-extended": "4.0.0-beta1",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.0.3",
    "node-config": "^0.0.2",
    "node-gyp": "^9.1.0",
    "nodemon": "^2.0.19",
    "pm2": "^5.2.0",
    "prettier": "^2.7.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "wait-for-expect": "^3.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
