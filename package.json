{
  "name": "neuro-blogger-telegram-bot",
  "version": "0.0.1",
  "description": "Telegram bot for generating blog posts using AI",
  "main": "src/bot.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/bot.ts",
    "dev": "nodemon",
    "build": "rimraf dist && tsc && tsc-alias",
    "build:prod": "tsc -p tsconfig.prod.json && tsc-alias",
    "build:nocheck": "tsc --skipLibCheck --skipDefaultLibCheck && tsc-alias",
    "predev": "pkill -f 'node.*src/bot.ts' || true && node scripts/kill-port.cjs 2999 3001 8288",
    "test": "vitest",
    "test:coverage:open": "pnpm vitest run --coverage && open ./coverage/index.html",
    "test:ui": "pnpm vitest --ui",
    "lint": "eslint \"./**/*.ts\"",
    "lint:fix": "eslint --fix \"./**/*.ts\"",
    "format": "prettier --write \"./**/*.ts\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@fastify/express": "^4.0.2",
    "@supabase/supabase-js": "^2.39.3",
    "archiver": "^7.0.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "elevenlabs": "^0.16.1",
    "envalid": "^7.3.1",
    "express": "^4.17.1",
    "express-fileupload": "^1.4.3",
    "express-serve-static-core": "^0.1.1",
    "fastify": "^5.3.2",
    "form-data": "^4.0.0",
    "inngest": "^3.11.1",
    "jest-mock": "^29.7.0",
    "md5": "^2.3.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "openai": "^4.24.7",
    "pinata-web3": "^0.5.4",
    "qs": "^6.11.2",
    "replicate": "^0.25.2",
    "telegraf": "^4.16.3",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.1",
    "@types/express-fileupload": "^1.4.4",
    "@types/md5": "^2.3.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.11",
    "@types/qs": "^6.9.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
