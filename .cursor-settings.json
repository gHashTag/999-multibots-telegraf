{
  "editor": {
    "theme": "dark",
    "fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "fontSize": 14,
    "tabSize": 2,
    "insertSpaces": true,
    "wordWrap": "on",
    "lineNumbers": "on",
    "cursorBlinking": "smooth",
    "cursorStyle": "line",
    "minimap": {
      "enabled": true,
      "showSlider": "always"
    },
    "suggestOnTriggerCharacters": true,
    "acceptSuggestionOnEnter": "smart",
    "showInlineHints": true
  },
  "ai": {
    "completionModel": "claude-3-sonnet-20240229",
    "codeCompletionEnabled": true,
    "docCompletionEnabled": true,
    "showCompletionConfidence": true,
    "maxTokens": 4096,
    "temperature": 0.7,
    "customPrompt": "Вы — НейроКодер, специалист по разработке ботов Telegram с Telegraf.js и Supabase"
  },
  "terminal": {
    "integrated": true,
    "fontFamily": "JetBrains Mono, monospace",
    "fontSize": 13,
    "lineHeight": 1.3,
    "shellPath": "/bin/zsh",
    "defaultProfile": "zsh"
  },
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoPull": false,
    "autoPush": false,
    "showCommitInfo": true
  },
  "files": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.git": true,
      "**/logs": true,
      "**/debug_logs": true,
      "**/tmp": true
    },
    "associations": {
      "*.ts": "typescript",
      "*.js": "javascript",
      "*.json": "json",
      "*.yaml": "yaml",
      "*.md": "markdown"
    },
    "autoSave": "afterDelay",
    "autoSaveDelay": 1000
  },
  "telemetry": {
    "enabled": false
  },
  "workbench": {
    "colorTheme": "GitHub Dark",
    "iconTheme": "material-icon-theme",
    "editorAssociations": {
      "*.md": "markdown.preview"
    }
  },
  "breadcrumbs": {
    "enabled": true,
    "icons": true
  }
} 