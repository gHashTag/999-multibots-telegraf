{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // Пропустить проверку типов в файлах деклараций зависимостей, чтобы избежать ошибок в библиотеках
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "src/http", "src/logs", "**/*.test.ts", "**/*.spec.ts"]
} 