{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom"],
   
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  // Include only source files, exclude tests from TS compilation
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/node_modules", "dist", "__tests__"]
}
